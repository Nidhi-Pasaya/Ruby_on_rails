<div class="alert" id ="notice" role="alert">
  <%= notice %>
</div>
<div class= "card p-3 cardcss1">
  <div class="rightcss">
    <%= link_to 'New Student Profile', new_student_profile_path, class:"btn btn-warning" %>
  <div>
<br/><br/>
<table class="table table-bordered shadow">
  <thead class="table-dark">
    <tr>
      <th>Student</th>
      <th>Age</th>
      <th>Email</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-light">
    <% @student_profiles.each do |student_profile| %>
      <tr>
        <td><%= student_profile.Student.firstName + " " + student_profile.Student.lastName%></td>
        <td><%= student_profile.age %></td>
        <td><%= student_profile.email %></td>
        <td><%= student_profile.address %></td>
        <td><%= student_profile.mobile %></td>
        <td><img src="<%= student_profile.image %>" width="50" height="100"></td>
        <td><%= link_to 'Show', student_profile %></td>
        <td><%= link_to 'Edit', edit_student_profile_path(student_profile) %></td>
        <td><%= button_to 'Destroy', student_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
